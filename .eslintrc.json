{
    "extends": "eslint:recommended",
    "plugins": ["react", "eslint-plugin-flowtype"],
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "env": {
        "browser": true,
        "jest": true,
        "mocha": true
    },
    "rules": {
        "comma-dangle": ["error", "always-multiline"],
        "indent": ["error", 4],
        "no-console": ["warn", {}],
        "no-var": "error",
        "prefer-const": "error",
        "quotes": ["error", "double"],
        "react/jsx-uses-react": "error",
        "react/jsx-uses-vars": "error",
        "semi": ["error", "always"]
    }
}
